<% if user_signed_in? %>

<h1 class = "text-center">All Application</h1>

<div class = "row justify-content-center m-3">

	<% if @job_started.length == 0 %>
		<div></div>
		<%else%>
		<div class = "col">
			<div class = "status-header text-center my-4">
				<h4> Started </h4>
				<small> <%= @job_started.length %> JOBS </small>
			</div>
			<div class = "job-list">
				<% @job_started.each do |job| %>
					<% modal_id = "modal-id-#{job.id}" %>
						<div class = "card regular mb-3">
							<a class = "card-link" data-toggle="modal" data-target="#<%=modal_id%>">
								<%= render "job-modal-content", job: job%>
							</a>
						</div>
					<%= render "modal-status", job: job, modal_id: modal_id%>
				<%end%>
			</div>
		</div>
	<%end%>

	<% if @job_submitted.length == 0 %>
		<div></div>
		<%else%>
			<div class = "col">
