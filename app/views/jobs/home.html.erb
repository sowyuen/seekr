<% if user_signed_in? %>

<h1 id="dashboard">Hello! This is your dashboard</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-4">

    	<div class="card text-white bg-dark mb-3" style="max-width: 20rem;" id="dash-list">
			  <div class="card-body">
			    <p class="card-text"><%= @count %> jobs applied today</p>
			  </div>
			</div>

    	<div class="card border-dark mb-3" style="max-width: 20rem;" id="dash-list">
			  <div class="card-header">Statistic</div>
			  <div class="card-body">
			  	<%= image_tag("graph.png", size: "300x200", alt: "Graph") %>
			  </div>
			</div>

    </div>

    <div class="col-sm-4">

    	<div class="card border-dark mb-3" style="max-width: 20rem;" id="dash-list">
			  <div class="card-header">Status</div>
			  <div class="card-body">
			    <ul>
						<li><%=@added%> Added</li>
						<li><%=@applied%> Applied</li>
						<li><%=@offer%> Offers</li>
						<li><%=@rejected%> Rejected</li>
					</ul>
					<div class="col text-center">
						<%= link_to '<button type="button" class="btn btn-outline-secondary" id="dash-button">Go to Jobs</button>'.html_safe, jobs_path %>
					</div>
			  </div>
			</div>

			<div class="card text-white bg-dark mb-3" style="max-width: 20rem;" id="dash-list">
			  <div class="card-header">Application Deadline</div>
			  <div class="card-body">
				   <ul>
						<% @deadline.each do |job| %>
							<li><%=job.comp_name%>  <%=job.title%>  <%=job.deadline.strftime("%d %b, %y")%></li>
						<% end %>
					</ul>
			  </div>
			</div>

    </div>

    <div class="col-sm-4">
    	<div class="card text-white bg-dark mb-3" style="max-width: 20rem;" id="dash-list">
			  <div class="card-header">Upcoming Interviews</div>
			  <div class="card-body">
				  <ul>
						<% @deadline.each do |job| %>
							<li><%=job.comp_name%>  <%=job.title%>  <%=job.deadline.strftime("%d %b, %y")%></li>
						<% end %>
					</ul>
			  </div>
			</div>

			<div class="card border-dark mb-3" style="max-width: 20rem;" id="dash-list">
			  <div class="card-header">Recent Activity</div>
			  <div class="card-body">
					<ul>
					<% @recent.each do |job| %>
						<li><%=job.title%>-<%=job.comp_name%> Moved to<%=job.status%> <%=job.updated_at.strftime("%d %b, %I:%M %p") %></li>
						<% end %>
					</ul>
			  </div>
			</div>
  </div>
</div>
</div>


<% else%>
<h1>UR NOT LOGGED IN</h1>
<%= link_to 'log in', new_user_session_url %>
<% end %>