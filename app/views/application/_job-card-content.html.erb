<div class = "description text-center m-3">
	<p class = "font-weight-bold mb-0">
		<%= job.comp_name.titleize %>
	</p>
	<p>
		<%= job.title.titleize %>
	</p>
	<small>
		== <%= job.status.titleize %> ==
	</small>
</div>

<div class="card-footer pr-2 text-right">
	<% if job.status.include?("Interview")%>
		<%if job.interview == nil%>
		<small>Interview date: No date set yet</small>
		<%else%>
		<small>Interview date: <span class = "font-weight-bold"><%=job.interview.to_date.strftime("%d %b %Y") %></span></small>
		<%end%>
		<%else%>
		<small>
			Updated on <%= job. updated_at.to_date.strftime("%d %b %Y") %>
		</small>
	<%end%>
</div>